{
	"title": "两列布局组件",

	"description": ["两列布局组件，提供了两个站位嘈", "左侧是主内容显示区域，右侧是相关信息区域"],

	"type": "main-right-layout",

	"themes": [{
		"type": "base"
	}, {
		"type": "noBorder",
		"description": ["组件可切换的主题，在Tab组件内部可使用"]
	}],

	"components": [{

		"type": "Layout",

		"props": [{
			"type": "Number",
			"name": "mainPadding",
			"default": 15
		}, {
			"type": "Boolean",
			"name": "canFolding",
			"default": true
		}, {
			"type": "Boolean",
			"name": "isClosed",
			"default": false
		}, {
			"type": "Object",
			"name": "mainContainer",
			"default": [{
				"type": "Percentage",
				"name": "width",
				"value": 65
			}, {
				"type": "Color",
				"name": "backgroundColor",
				"value": "red"
			}]
		}],

		"slots": [{
			"name": "main"
		}, {
			"name": "right"
		}],

		"events": [{
			"type": "onFolding",
			"description": ["组件折叠的时候抛出的事件"],

			"triggerOn": ["mountd", "eventHandler", "created"],

			"arguments": [{
				"type": "Boolean",
				"name": "isClosed"
			}],

			"tests": ["onFoldingTest"]
		}]
	}],

	"actions": [{
		"type": "closeMainContainer",
		"description": ["关闭主内容区域的功能实现函数"],

		"accessModifier": ["private", "public", "event-flows"],

		"inputs": [{
			"type": "Percentage",
			"name": "width",
			"required": false,
			"default": 65
		}],

		"outputs": [
		],
		
		"modifiedProps": ["isClosed", "mainContainer"],

		"tests": ["paramsTypeTest", "outputsTest"]
	}]
}
